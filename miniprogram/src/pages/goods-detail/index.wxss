.hr{border-top:1px solid #f0f0f0;height: 0;width: 100%;}
.goods-banner{height: 100vw;}
.goods-banner .slide-image{width: 100%;height: 100%;}

.section{background-color: #fff;margin-bottom:10px;}

.section-title{padding: 15px 10px;}
.price-item{margin-bottom:10px;}
.price-item .price .char-rmb{color: #ff4d61;font-size:17px;margin-right: 2px;}
.price-item .price .price-num{color: #ff4d61;font-size:23px;}
.price-item .price .origin-price{color: #999;display: inline-block}
.price-item .price .origin-price .origin-num{text-decoration: line-through;padding: 0 5px;font-size: 12px;}
.price-item .price .origin-price .label{font-size: 10px; border: 1px solid #ff4d61; color: #ff4d61; padding: 0 5px; border-radius: 1px;}
.price-item .sale-count{font-size:12px;color: #666;}
.price-item .sale-count .sale-num{color: #ff4d61;padding: 0 2px;}
.section-title .title{font-size:16px;color: #000;}
.section-title .subtitle{font-size:14px;color: #999;}
.section-title .title .label{padding: 1px 5px;color: #FFF;font-size: 12px;border-radius: 2px;margin-right: 2px;}
.section-title .title .label.zy{background-color: #ff4d61;}
.section-title .title .label.std{background-color: #727FBE;}

.pmt{color: #000;font-size:14px;}
.pmt .coupon,.pmt .other{padding: 10px;}
.pmt .other{border-top:1px solid #f0f0f0;overflow: hidden;}
.pmt .other .item{display: flex;align-items: center;}
.pmt .other .item.inline{display: inline-block;}
.pmt .label{background-color: #ff4d61; font-size: 12px; color: #FFF; padding: 1px 5px; border-radius: 2px; margin-right: 10px;}
.pmt .coupon .label{background-color: #FBA200;}
.pmt .item{padding:5px 0;}

.section-delivery .location{padding: 10px;font-size:14px;}
.section-delivery .location .item{padding: 5px 0;display: flex;overflow: hidden}
.section-delivery .location .item .title{color: #999;margin-right:10px;flex-shrink:0;}
.section-delivery .location .item .content{flex:1;overflow:hidden;}
.section-delivery .location .address{overflow: hidden}
.section-delivery .location .address .icon{padding:0 2px 2px 0;width:16px;height:16px;vertical-align: middle}
.section-delivery .service{padding: 15px 10px;background-color: #fafafa;font-size:12px;color: #666;justify-content: flex-start}
.section-delivery .service .item{padding-right:10px;}
.section-delivery .service .item .tag{width: 16px;height:16px;margin-right:3px;}
.section-delivery .shop-name{color: #666;}
.section-delivery .arrive-time{color: #999;font-size:13px;}

.section-guide{padding: 20px 10px;}
.section-guide .guide{margin-right:10px;font-size:11px;color: #999;text-align: center}
.section-guide .avatar{width: 40px;height: 40px;overflow: hidden;border-radius: 50%;}
.section-guide .desc{font-size:13px;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:3;overflow: hidden;text-overflow: ellipsis;}
.section-guide .content{color: #666;}

.section-qc-report{padding: 15px 10px;font-size:14px;}

.section-tabs{margin-bottom:0;}
.section-tabs .tabs{padding: 0 5px;}
.section-tabs .tab{padding: 10px 5px;text-align: center;color: #666;font-size:15px;}
.section-tabs .tab.active{color: #ff4d61;border-bottom: 2px solid #FF4D61;}
.section-tabs .content{min-height: -webkit-calc(100vh - 94px);}
.goods-desc{font-size: 0;}
.goods-desc image{width: 100%;}

.goods-params{padding: 0 10px;}
.goods-params .title{color: #FF4D61;font-size:13px;padding: 10px 0;}
.goods-params .item{justify-content: flex-start;padding: 10px 0;word-break: break-all;border-top:1px solid #f0f0f0;}
.goods-params .item .key{color: #666;font-size:14px;flex-shrink: 0;padding-right:10px;width: 100px;}
.goods-params .item .value{color: #333;font-size:13px;}

.goods-comments .list{padding:10px;}
.goods-comments .list .item {padding: 10px 0;border-bottom: 1px solid #f0f0f0;}
.goods-comments .list .item .avatar{width: 40px;height: 40px;overflow: hidden;border-radius: 50%;margin-right: 10px;}
.goods-comments .list .item .user-info .name{font-size:15px;color: #666;}
.goods-comments .list .item .user-info .age{font-size:12px;color: #999;}
.goods-comments .list .item .user-info .star-level{text-indent: -9999px;}
.goods-comments .list .item .user-info .comment-time{font-size:12px;color: #ccc;}
.goods-comments .list .item .comment{padding-left: 50px;}
.goods-comments .list .item .comment .text{padding: 10px 0;font-size:14px;color: #666;}
.goods-comments .list .item .comment .pics{padding-bottom: 10px;justify-content: flex-start;overflow-x: auto;white-space: nowrap;font-size:0;
}
.goods-comments .list .item .comment .pic{display:inline-block;width:90px;height:90px;background-repeat: no-repeat;background-position:center;background-size: cover;margin-right: 5px;}
.goods-comments .list .item .comment .pic:last-child{margin-right: 0;}
.goods-comments .list .item .shop-reply{color: #999;font-size:12px;background-color: #f7f7f7;padding: 10px;margin-bottom: 10px;}
.goods-comments .list .item .status{color: #ccc;font-size:12px;}
.goods-comments .list .item .sku{color: #999;font-size:12px;margin-left: 10px;}


.footer .space{height: 50px;}
.footer .option {position:fixed;bottom: 0;left: 0;right:0;background: #fff;height:50px;}
.footer .btn-cart{width: 50px;height:100%;}
.footer .btn-cart .icon{position:relative;width: 20px;height: 20px;background: url("/images/ic_cart_dark.png") no-repeat;background-size: cover;}
.footer .btn-cart .icon .num{position: absolute;right: 0;top:0;transform:translate(50%, -50%);padding:0 3px;color: #fff;border-radius: 40%;background: #FF4D61;font-size:10px;line-height: 1.3;}
.footer .btn{border-radius: 0;font-size:16px;height:100%;background: #FF4D61;color: #fff;}
.footer .add-cart{background-color: #FF7F8C;border-color: #FF7F8C;}
.footer .btn.disabled{background-color: #dcdcdc;border-color: #dcdcdc;}