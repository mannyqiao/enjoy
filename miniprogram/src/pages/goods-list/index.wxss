@import "../../components/goods-list/index.wxss";

.hr{border-top:1px solid #f0f0f0;height: 0;width: 100%;}
.section{background-color: #fff;overflow: hidden;margin-bottom: 5px;}

.search-bar{background-color: #f0f0f0;border-radius: 5px;margin: 5px 15px;font-size:14px;padding: 3px 0;}
.search-bar .search,.search-bar .close{width: 14px;height: 14px;background-size: cover;}
.search-bar .search{background-image: url("/images/ic_search_gray.png");margin: 5px 10px;}
.search-bar .close{background-image: url("/images/ic_x_gray.png");margin: 5px;    }

.sort-type{padding: 10px 0;}
.sort-type .types{white-space: nowrap;overflow-x: auto;display: flex}
.sort-type .types text{font-size:13px;color: #666;padding: 0 15px;flex: 1}
.sort-type-nav .types .active{color: #ff4d61}
.sort-type .hr-v{padding: 6px 0;border-left:1px solid #999;width:0;}
.sort-type .filter{padding: 0 20px;font-size:13px;}

.sort-label {padding: 10px 0;overflow-x: auto;white-space:nowrap;  }
.sort-label text {padding: 4px 10px;margin-left: 15px;background-color: #f0f0f0;border: 1px solid #f0f0f0;border-radius: 3px;font-size:12px;color: #666;}
.sort-label text.active {border: 1px solid #ff4d61;color: #ff4d61;background-color: #fff;position: relative}
.sort-label text.active:before{position: absolute;z-index:2;right: 0;bottom: 0;content: '+';width:7px;height:7px;color: #fff;font-size:9px;line-height: 7px;overflow: hidden;text-align: center;transform: rotate(135deg)}
.sort-label text.active:after{position: absolute;z-index:1;right: 0;bottom: 0;content: '';width:0;height:0;border-bottom:14px solid #ff4d61;border-left:14px solid transparent;}


.dialog__bd .list-title{color: #999;font-size:13px;padding: 15px;}
.dialog__bd .list-content{font-size:12px;color: #666;padding: 15px;}
.dialog__bd .list-content.price{font-size:10px;justify-content: space-between;}
.dialog__bd .list-content.price .line-through{height: 0;border-top: 1px solid #999;width: 10px;}
.dialog__bd .list-content.price input{background-color: #f0f0f0;text-align: center;border-radius: 3px;}
.placeholder{font: 10px "Heiti SC","Microsoft YaHei";color: #999;}

.dialog__bd .list-content.brands{flex-wrap: wrap;justify-content: flex-start;padding: 0 10px;}
.dialog__bd .list-content.brands .item{width:25%;padding: 0 5px 10px 5px;}
.dialog__bd .list-content.brands .item image{width: 60px;height:60px;}

.dialog__bd .list-content.labels{flex-wrap: wrap;justify-content: flex-start;padding: 0 10px;}
.dialog__bd .list-content.labels .item{width:33.33%;padding: 0 5px 10px 5px;}
.dialog__bd .list-content.labels .item .text{padding: 5px 15px;background-color: #f0f0f0;border-radius: 3px;text-align: center;border:1px solid #f0f0f0;}
.dialog__bd .list-content.labels .item .text.active{background-color: #fff;border-color: #ff4d61;color: #ff4d61;}
.dialog__ft .reset{color: #ff4d61;width: 40%;content: '';border: 0;border-top: 1px solid #dcdcdc;}
.dialog__ft .mark{font-size:12px;}
