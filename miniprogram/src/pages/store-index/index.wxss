@import "../../components/goods-list/index.wxss";

/* 门店详情 */
.hr{border-top:1px solid #f0f0f0;height: 0;width: 100%;}
.header{position:relative;overflow:hidden;height:180px;background-size:cover;background-repeat: no-repeat;}
.header:after{position:absolute;right:0;bottom:0;left:0;z-index:1;height:80px;background:-webkit-linear-gradient(bottom,rgba(0,0,0,.7) 0,rgba(0,0,0,0) 80%);content:"";}
.header .notice {position:absolute;right:0;bottom:0;left:0;z-index:2;padding:10px;color:#fff;align-items:flex-end;justify-content:flex-start;font-size:13px;}
.header .notice .logo{overflow:hidden;margin-right:10px;width:50px;height:50px;background:#FFF;}
.header .notice .label{padding:0 4px;border-radius:2px;background:#FF001D;color:#fff;white-space:nowrap;font-size:12px;}

.section{background-color: #fff; }
.introduce{padding:15px 10px;}
.shopInfo .name{color: #000;padding-right: 25px;}
.shopInfo .address{color: #999;font-size:12px;margin-top:6px;}
.shopInfo .location,.shopInfo .customer-service{width: 31px;height: 31px;background-repeat: no-repeat;background-size: cover;margin:0 10px;}
.shopInfo .location{background-image: url("/images/ic_store_map@2x.png");}
.shopInfo .customer-service{background-image: url("/images/ic_store_phone@2x.png");}

.introduce .service-label text{color: #ff8f35;border:1px solid #ff8f35;border-radius: 10px;padding:0 5px;margin-right:4px;font-size:10px;}
.comment{padding:15px 10px;}
.comment .people{padding-right:15px;}
.comment .people image{width: 25px;height: 25px;border-radius:50%;margin-right:5px;overflow: hidden}
.comment .rating{padding-right:15px;font-size:12px;}

.act-list{padding:10px;margin:10px 0;overflow: hidden;}
.act-list .item{font-size:12px;display: flex;align-items: center;padding: 5px 0;}
.act-list .item .type{padding: 0 4px;border-radius:2px;font-size:10px;margin-right: 8px;}

.goods-nav{margin-bottom:5px;}
.goods-nav .types{white-space: nowrap;overflow-x: auto}
.goods-nav .types text{font-size:14px;color: #666;padding: 0 15px;}
.goods-nav .types .active{color: #ff4d61}
.hr-v{padding: 20px 0;border-left:1px solid #f0f0f0;width:0;}
.goods-nav .search{width: 16px;height: 16px;background-image: url('/images/ic_search_dark.png');background-repeat: no-repeat;background-size: cover;margin: 0 20px;}


