
@model Enjoy.Core.ViewModels.SignViewModel
<div class="container">
    <div class="row" style="display:inline" id="signin">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">登录</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginFormAntiForgeryPost(Url.Action("Signin", new { ReturnUrl = Request.QueryString["ReturnUrl"] })))
                    {
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(o => o.Mobile, new { @class = "form-control", placeholder = "手机号码", autofocus = "autofocus" })           @Html.ValidationMessageFor(o=>o.Mobile)
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(o => o.Password, new { @class = "form-control", placeholder = "输入密码", type = "password" })
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block">登陆</button>                            
                            <a id="btn_switch_to_signup" name="btn_switch_to_signup" href="#" class="btn btn-lg  btn-block">立即注册</a>
                        </fieldset>
                    }

                </div>
            </div>
        </div>
    </div>
    <div class="row" style="display:none" id="signup">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">注册</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginFormAntiForgeryPost(Url.Action("Signup", new { ReturnUrl = Request.QueryString["ReturnUrl"] })))
                    {
                        <fieldset>
                            <div class="form-group input-group">
                                @Html.TextBoxFor(o => o.Mobile, new { @class = "form-control", placeholder = "手机号码", type = "mobile", autofocus = "autofocus" })   
                                <a href="javascript:void(0)" class="btn btn-lg  btn-block input-group input-group-addon">获取验证码</a>
                                @Html.ValidationMessage("mobile")
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(o => o.VerificationCode, new { @class = "form-control", placeholder = "手机验证码" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(o => o.Password, new { @class = "form-control", placeholder = "输入密码", type = "password" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(o => o.ConfirmPassword, new { @class = "form-control", placeholder = "确认密码", type = "password" })
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block">提交</button>
                            <a href="#" id="btn_switch_to_signin" name="btn_switch_to_signin" class="btn btn-lg  btn-block">使用已经有帐号</a>
                        </fieldset>
                    }                  
                </div>
            </div>
        </div>
    </div>
</div>
