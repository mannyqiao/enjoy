
@model Enjoy.Core.ViewModels.SignViewModel
<div class="container">
    @if (Model.Signin)
    {
        @Html.Partial("Component/_SignInPartial", Model.Current)
    }
    else
    {
        @Html.Partial("Component/_SignUpPartial", Model.Current)
    }
    @if (Model.HasError)
    {
        <div class="alert alert-warning">
            @Model.ErrorMessage
        </div>
    }
</div>
