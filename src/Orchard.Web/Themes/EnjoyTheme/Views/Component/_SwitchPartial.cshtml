@model Enjoy.Core.UIElements.SwitchUIElement
<fieldset>
    <div class="form-group  @(Model.Required?"required":"")">
        <label class="control-label">@Model.Text</label>
        <div class="switch" data-on="primary" data-off="info">
            <input id="@Model.Id" name="@Model.Name" type="checkbox" @(Model.Value.Equals("false") ? "" : "checked='checked'") />
        </div>
    </div>
</fieldset>