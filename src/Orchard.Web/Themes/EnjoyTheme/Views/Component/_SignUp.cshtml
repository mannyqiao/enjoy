
@model Enjoy.Core.ViewModels.SignUpViewModel
<div class="row" >
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">注册</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginFormAntiForgeryPost(Url.Action("Signup", new { ReturnUrl = Request.QueryString["ReturnUrl"] })))
                {
                    <fieldset>
                        <div class="form-group input-group">
                            @Html.TextBoxFor(o => o.Mobile, new { @class = "form-control", placeholder = "手机号码", type = "tel", autofocus = "autofocus" })
                            <a href="javascript:void(0)" class="btn btn-lg  btn-block input-group input-group-addon">获取验证码</a>
                            @Html.ValidationMessage("mobile")
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(o => o.VerificationCode, new { @class = "form-control", placeholder = "手机验证码" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(o => o.Password, new { @class = "form-control", placeholder = "输入密码", type = "password" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(o => o.ConfirmPassword, new { @class = "form-control", placeholder = "确认密码", type = "password" })
                        </div>
                        <button type="submit" class="btn btn-lg btn-success btn-block">提交</button>
                        <a href="/Access/Sign?signin=true"  class="btn btn-lg  btn-block">使用已经有帐号</a>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
@using (Script.Foot())
{
    <script src="/Themes/EnjoyTheme/Content/plugs/jquery/jquery-1.10.2.min.js"></script>
    <script src="/Themes/EnjoyTheme/Content/scripts/bootstrap.min.js"></script>
    <script src="/Themes/EnjoyTheme/Content/plugs/jquery.validate/jquery.validate.min.js"></script>
    <script src="/Themes/EnjoyTheme/Content/plugs/jquery.validate/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
       $(document).ready(function () {
           $("form").validate({
               errorClass   :"has-error",
               rules:{
                    Mobile          :{required: true},
                    Password        :{required: true}
               },
               messages: {
                    Mobile          :{required: "手机号码不能为空" },
                    Password        :{required: "密码不能为空"}
               },
               errorPlacement:  function(error, element){
                    element.parent().addClass("has-error");
                    error.appendTo(element.parent());
               },
               success: function(label){
                    label.parent().removeClass("has-error");
               }
           });

       });
    </script>

}