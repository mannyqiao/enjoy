@model Enjoy.Core.ViewModels.SignInViewModel
<div class="row" style="display:inline" id="signin">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">登录</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginFormAntiForgeryPost(Url.Action("Signin", new { ReturnUrl = Request.QueryString["ReturnUrl"] })))
                {
                    <fieldset>
                        <div class="form-group">
                            <label for="@Html.NameOf(o=>o.Mobile)">手机号码</label>
                            @Html.TextBoxFor(o => o.Mobile, new { @class = "form-control", type = "tel|email", placeholder = "", required = "true", autofocus = "autofocus" })

                        </div>
                    </fieldset>
                    <fieldset>
                        <div class="form-group">
                            <label for="@Html.NameOf(o=>o.Password)">密码</label>
                            @Html.TextBoxFor(o => o.Password, new { @class = "form-control", placeholder = "", type = "password", required = "required" })
                        </div>
                        <button type="submit" class="btn btn-lg btn-success btn-block">登陆</button>
                        <a href="/Access/Sign?signin=false" class="btn btn-lg  btn-block">立即注册</a>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
@using (Script.Foot())
{
    <script src="/Themes/EnjoyTheme/Content/plugins/jquery/jquery-1.10.2.min.js"></script>
    <script src="/Themes/EnjoyTheme/Content/scripts/bootstrap.min.js"></script>
    @*<script src="/Themes/EnjoyTheme/Content/plugs/jquery.validate/jquery.validate.min.js"></script>*@
    <script src="/Themes/EnjoyTheme/Content/plugins/jquery-html5Validate/jquery-html5Validate.js"></script>
    @*<script src="/Themes/EnjoyTheme/Content/plugs/jquery.validate/jquery.validate.min.js"></script>
        <script src="/Themes/EnjoyTheme/Content/plugs/jquery.validate/jquery.validate.unobtrusive.min.js"></script>*@

    <script type="text/javascript">
        $(document).ready(function () {
            $("form").html5Validate(function () {
                //alert("全部通过！");
                this.submit();
            }, {
                    // novalidate: false
            });

        });
    </script>

}