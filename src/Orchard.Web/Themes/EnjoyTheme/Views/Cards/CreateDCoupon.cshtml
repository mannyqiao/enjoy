                    <div class="tab-pane fade" id="rules">
                        <h4>&nbsp;</h4>
                        <div class="form-group required">
                            <label class="radio-inline control-label">
                                <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline1" value="option1" checked="">折扣券
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline2" value="option2">礼品券
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optionsRadiosInline" id="optionsRadiosInline3" value="option3">现金券
                            </label>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="skin">
                        <h4>&nbsp;</h4>
                       
                    </div>
