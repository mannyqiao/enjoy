@model Enjoy.Core.ViewModels.MerchantProfileViewModel
<div id="page-wrapper">
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">创建商户</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-md-4 ">

        </div>
        <div class="col-md-4 ">
            @using (Html.BeginFormAntiForgeryPost(Url.Action("Create", new { ReturnUrl = Request.QueryString["ReturnUrl"] })))
            {
                @Html.HiddenFor(o=>o.Id)
                <fieldset>
                    <div class="form-group">
                        @Html.TextBoxFor(o => o.MerchantName, new { @class = "form-control", type = "tel", placeholder = "商户名称", autofocus = "autofocus" })      @Html.ValidationMessageFor(o =>o.MerchantName)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(o => o.Category, new { @class = "form-control", type = "tel", placeholder = "商户分类", autofocus = "autofocus" })      @Html.ValidationMessageFor(o => o.Category)
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(o => o.License, new { @class = "form-control", type = "tel", placeholder = "营业执照编号", autofocus = "autofocus" })      @Html.ValidationMessageFor(o => o.License)
                    </div>
                    <div class="form-group">                        
                        <img  src="@Model.LicenseImageUrl"/>
                        @Html.HiddenFor(o=>o.LicenseImageUrl)
                    </div>
                    <div class="form-group">
                        <img src="@Model.LogoUrl" />
                        @Html.HiddenFor(o => o.LogoUrl)
                        <label>点击上传图片</label>
                    </div>
                    
                    <button type="submit" class="btn btn-lg btn-success btn-block">保存</button>
                </fieldset>
            }
        </div>
        <div class="col-md-4 ">

        </div>
    </div>
  
  
</div>