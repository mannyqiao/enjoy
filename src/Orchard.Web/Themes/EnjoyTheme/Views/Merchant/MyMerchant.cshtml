@using Enjoy.Core.UIElements;
@using Enjoy.Core.Models;
@using Enjoy.Core;

@model Enjoy.Core.Models.PagingData<MerchantModel>
<div id="page-wrapper">
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">商户列表</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            @if (Model.TotalCount == 0)
            {
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4">
                        <a href="/merchant/create" class="btn btn-lg btn-default btn-block">立即创建</a>
                    </div>
                    <div class="col-lg-4"></div>
                </div>
            }
            else
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-bar-chart-o fa-fw"></i>
                        @*<a type="button" class="btn btn-primary btn-sm" id="btn_reaload" href="javascript:void()"><i class="fa fa-plus fa-fw"></i>新增商户</a>*@
                        <div class="pull-right">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                    操作
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu pull-right" role="menu">

                                    <li>
                                        <a href="#">提交审核</a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="#">同步商户状态</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <table width="100%" class="table table-striped table-bordered table-hover" id="mymerchant">
                                        <thead>
                                            <tr>
                                                <th class="hidden">商户编号</th>
                                                <th>商户编号</th>
                                                <th>商户名称</th>
                                                <th>AppId</th>
                                                <th>商户分类</th>
                                                <th>商户地址</th>
                                                <th>商户状态</th>
                                                <th>操作</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                        </div>


                        <!-- /.row -->
                    </div>
                    <!-- /.panel-body -->

                </div>
            }
        </div>

    </div>
</div>
@using (Html.BeginFormAntiForgeryPost(Url.Action("Audit")))
{

}
@using (Script.Foot())
{
    <script src="/Themes/EnjoyTheme/Content/home/js/jquery-1.11.1.min.js"></script>
    <script src="/Themes/EnjoyTheme/Content/scripts/jquery.cxselect.min.js"></script>
    <script src="/Themes/EnjoyTheme/Content/scripts/bootstrap.min.js"></script>
    <script src="/Themes/EnjoyTheme/Content/plugins/datatables/js/jquery.dataTables.js"></script>
    <script src="/Themes/EnjoyTheme/Content/plugins/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/Themes/EnjoyTheme/Content/plugins/datatables-responsive/dataTables.responsive.js"></script>
    <script src="/Themes/EnjoyTheme/Content/scripts/ajaxfileupload.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#mymerchant').DataTable({
                "paging": true,
                "responsive": true,
                "serverSide": true,
                "processing": true,//加载中
                "pagingType": "full_numbers",//分页模式
                "language": {
                    "paginate": {
                        "first": "第一页",
                        "last": "末页",
                        "previous": "上一页",
                        "next": "下一页"
                    },
                    "emptyTable": "没有数据",
                    "info": "显示  _PAGE_ / _PAGES_ 页",
                    "infoEmpty": "显示 0 到 0 记录,共 0 记录",
                    "search": "搜索:",
                    "infoFiltered": "",
                    "lengthMenu": "每页显示 _MENU_ 条记录",
                    "processing": "玩命加载中..."
                },
                "ajax": {
                    "url": "/merchant/QueryMyMerchant",
                    "type": "POST",
                    "data": function (args) {
                        args.__RequestVerificationToken = $("input[name='__RequestVerificationToken']").val();                        
                        return args;
                    }
                },
                "columns": [
                    { data: "Key" },
                    { data: "MerchantId" },
                    { data: "BrandName" },
                    { data: "AppId" },
                    { data: "CategoryName" },                    
                    { data: "Address" },
                    { data: "StatusName" },
                    { data: "ActionLinks" }
                ],
                "columnDefs": [
                    { "searchable": false, "targets": 0, orderable: false },//Id
                    { "searchable": false, "targets": 1 }, //MerchantId
                    { "searchable": true, "targets": 2 },//BrandName
                    { "searchable": true, orderable: false, "targets": 3 },//AppId
                    { "searchable": false, "targets": 4 },//CategoryName
                    { "searchable": false, "targets": 5 }, //Address
                    { "searchable": false, orderable: false, "targets": 6 }//StatusName
                    { "searchable": false, orderable: false, "targets": 7 }//StatusName
                ]
            });

            $("#btn_audit").click(function (e) {
                e.preventDefault();
                var id = $(this).attr("data-id");
                var href = $(this).attr("href");
                $.ajax({
                    type: 'POST',
                    url: href,
                    data: {
                        "id": id,
                        __RequestVerificationToken: $("input[name='__RequestVerificationToken']").val()
                    },
                    success: function (result) {
                        if (result.error_code == 0) {
                            table.ajax.reload();
                        }
                        else {
                            alert(result.error_message);
                        }
                    },
                    error: function (msg) {

                    },
                    complete: function (xhr, ts) {

                    }
                });
            });
        });
    </script>
}